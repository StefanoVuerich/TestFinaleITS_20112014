
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="panel panel-default" style="margin-top:10px;">
        <div class="panel-heading">Register</div>
        <div class="panel-body">
            <form role="form">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="inputConfirmPassword">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="inputPassword3">Confim Password</label>
                    <input type="password" class="form-control" id="confirmPassord" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-default" id="registerButton">Register</button>

                <div class="form-group">
                    <p class="text-danger" id="feedback" style="margin-top:10px;"></p>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/register.js"></script>

